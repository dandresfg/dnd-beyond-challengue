{
    "name": "dnd-beyond-challengue",
    "version": "1.1.0",
    "description": "D&D Beyond Challengue",
    "scripts": {
        "dev": "concurrently \"bun run dev:api\" \"bun run dev:ui\"",
        "dev:api": "cd api && bun run start:dev",
        "dev:ui": "cd ui && bun run dev",
        "format:ui": "cd ui && bun run format",
        "format:api": "cd api && bun run format",
        "install:all": "cd api && bun install && cd ../ui && bun install"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}